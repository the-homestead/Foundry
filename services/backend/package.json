{
    "name": "@foundry/backend",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./server": {
            "types": "./dist/server.d.ts",
            "import": "./dist/server.js"
        },
        "./lib/*": {
            "types": "./dist/lib/*.d.ts",
            "import": "./dist/lib/*"
        },
        "./routes/*": {
            "types": "./dist/routes/*.d.ts",
            "import": "./dist/routes/*"
        },
        "./schemas/*": {
            "types": "./dist/schemas/*.d.ts",
            "import": "./dist/schemas/*"
        }
    },
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "te": "node --import ./instrument.mjs src/index.ts",
        "start": "node dist/index.js --host 0.0.0.0",
        "db:auth": "node --loader tsx/cjs ./src/lib/auth-db.ts"
    },
    "dependencies": {
        "@better-auth/passkey": "catalog:",
        "@foundry/configs": "workspace:*",
        "@foundry/database": "workspace:*",
        "@foundry/types": "workspace:*",
        "@hono/node-server": "catalog:",
        "@hono/standard-validator": "catalog:",
        "@hono/swagger-ui": "^0.5.3",
        "@hono/zod-openapi": "^1.2.2",
        "@sentry/node": "^10.38.0",
        "@sentry/profiling-node": "^10.38.0",
        "bcryptjs": "catalog:",
        "better-auth": "catalog:",
        "dotenv-mono": "catalog:",
        "fs-extra": "catalog:",
        "hono": "catalog:",
        "hono-openapi": "catalog:",
        "hono-rate-limiter": "catalog:",
        "nodemailer": "catalog:",
        "pathe": "catalog:",
        "uuid": "catalog:",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@foundry/config_ts": "workspace:*",
        "@types/fs-extra": "catalog:",
        "@types/node": "catalog:",
        "@types/nodemailer": "catalog:",
        "execa": "catalog:",
        "magic-string": "catalog:",
        "tsx": "catalog:",
        "typescript": "catalog:"
    }
}
