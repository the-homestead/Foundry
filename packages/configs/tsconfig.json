{
    "extends": "@foundry/config_ts/base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": { "@foundry/configs/": ["./src/*"] },
        "declaration": true,
        "module": "CommonJS",
        "target": "ES2020",
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}
